# Robinhood (optional; enables trade hotkeys)
RH_USERNAME=
RH_PASSWORD=
RH_AUTO_LOGIN_DELAY_S=5

# Trade latency tuning (optional)
# RH_FAST_ORDERS=1  # default on; set 0 to use robin_stocks built-in order helpers (slower)
# RH_REFRESH_UNCONFIRMED=auto (default: refresh limit orders only), 0, or 1
# RH_BUY_DOLLARS_WHOLE_SHARES=1  # forces $+Market to do quote->whole shares (slower; lets STOP protect the full bought size)
# RH_SELL_CANCEL_OPEN=stop  # stop|all|none. Default: stop (prevents "insufficient shares" when a stop-loss is open)

# News panel
# Fetches only news within the last NEWS_LOOKBACK_HOURS hours.
NEWS_LOOKBACK_HOURS=6

# Alpaca News (required for News panel)
ALPACA_API_KEY=
ALPACA_API_SECRET=
ALPACA_NEWS_BASE_URL=https://data.alpaca.markets/v1beta1

# If you see: SSL: CERTIFICATE_VERIFY_FAILED (unable to get local issuer certificate)
# set this to a PEM bundle path (common on corporate VPN/proxy networks).
# RH_CA_BUNDLE=C:\path\to\ca-bundle.pem

# LM Studio (optional; used for news summary + sentiment)
LMSTUDIO_BASE_URL=http://127.0.0.1:1234/v1
LMSTUDIO_MODEL=local-model

# Alpaca bars (optional; used for auto stop-loss fallback on 1Min interval)
ALPACA_DATA_BASE_URL=https://data.alpaca.markets/v2
ALPACA_DATA_FEED=iex

# Alpaca market-data stream (optional; used for Time & Sales panel)
# Default: v2/<ALPACA_FEED|ALPACA_DATA_FEED|iex>
# ALPACA_WS_ENDPOINT=v2/iex

# RVOL (optional; computed from Alpaca "dailyBar" volume so far today vs avg daily volume)
RVOL_LOOKBACK_DAYS=20
RVOL_REFRESH_S=60
RVOL_TIMEFRAME=5Min
# Session start used for "volume so far today" comparisons (ET). Use 09:30 for regular hours only.
RVOL_SESSION_START_ET=04:00
