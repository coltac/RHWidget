RH_USERNAME=
RH_PASSWORD=
RH_AUTO_LOGIN_DELAY_S=5

# News + sentiment (Alpaca + LM Studio)
# Fetches only news within the last NEWS_LOOKBACK_HOURS hours.
NEWS_LOOKBACK_HOURS=6

# Alpaca News API credentials (data.alpaca.markets)
# You can also use APCA_API_KEY_ID / APCA_API_SECRET_KEY instead of these.
ALPACA_API_KEY=
ALPACA_API_SECRET=
ALPACA_NEWS_BASE_URL=https://data.alpaca.markets/v1beta1

# LM Studio OpenAI-compatible server
LMSTUDIO_BASE_URL=http://127.0.0.1:1234/v1
LMSTUDIO_MODEL=local-model

# Auto stop-loss on buy
# Places a stop-loss sell at (previous completed candle low - AUTO_STOP_OFFSET) after the buy fills.
AUTO_STOP_ENABLED=false
AUTO_STOP_OFFSET=0.01
AUTO_STOP_INTERVAL=1minute
AUTO_STOP_SPAN=day
AUTO_STOP_BOUNDS=regular
AUTO_STOP_MAX_WAIT_S=12

# Alpaca data feed used for 1-minute candles (IEX is free-tier; SIP may require subscription)
ALPACA_DATA_BASE_URL=https://data.alpaca.markets/v2
ALPACA_DATA_FEED=iex
